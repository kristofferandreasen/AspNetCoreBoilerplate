@{
    ViewData["Title"] = "Modal";
}

<div id="modal_page">

<!-- Page Header -->
<header class="intro-header">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-12">

                    <div class="breaksection"></div>
                        
                    <h1>Different Modals for your site</h1>
                    <h2>Prompt the users with the right choices.</h2>

                    <div class="breaksection"></div>

            </div>
        </div>
    </div>
</header>
<!-- End of page header -->

<div class="lightgrey_background">
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <div class="breaksection"></div>

                <!-- Modal Section -->
                <div id="modal_section">
                    <div class="container"> 
                        <div class="row">
                                <div class="col-md-12">
                                
                                <div class="text-center">

                                    <!-- Modal Header visible on the page -->
                                    <h3 class="subheader blue">Modal Example</h3>

                                    <!-- Trigger/Open The Modal -->
                                    <button class="btn__solid_green" id="myBtn">Open Modal</button>

                                </div>

                                <!-- Import Modal Component -->
                                @await Html.PartialAsync("Components/_ModalComponent")

                                </div>
                        </div>
                    </div>
                </div>
                <!-- / Modal Section -->

                <div class="breaksection"></div>

            </div>
        </div>
    </div>
</div>

    

</div>